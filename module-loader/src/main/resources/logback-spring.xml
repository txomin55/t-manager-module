<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
	<include resource="org/springframework/boot/logging/logback/base.xml"/>
    <logger name="org.springframework" level="INFO"/>

    <property name="LOG_FILE" value="LogFile" />
	<property name="LOG_DIR" value="/var/logs/module" />

    <springProfile name="develop-in-memory">
        <root level="INFO">
            <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		        <encoder>
		            <pattern>%d{yyyy-MM-dd HH:mm:ss} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n</pattern>
		        </encoder>
		    </appender>
		       
		    <appender name="SAVE-TO-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		        <file>${LOG_DIR}/${LOG_FILE}.log</file>
		        <encoder>
		            <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36}.%M - %msg%n</Pattern>
		        </encoder>
		        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
		            <fileNamePattern>${LOG_DIR}/archived/${LOG_FILE}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
		            <maxFileSize>10MB</maxFileSize>
		            <maxHistory>30</maxHistory>
		            <totalSizeCap>100MB</totalSizeCap>
		        </rollingPolicy>
		    </appender>
        </root>

    </springProfile>

    <springProfile name="production-in-memory">
        <root level="ERROR">
            <appender name="SAVE-TO-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		        <file>${LOG_DIR}/${LOG_FILE}.log</file>
		        <encoder>
		            <Pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n</Pattern>
		        </encoder>
		        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
		            <fileNamePattern>${LOG_DIR}/archived/${LOG_FILE}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
		            <maxFileSize>10MB</maxFileSize>
		            <maxHistory>30</maxHistory>
		            <totalSizeCap>100MB</totalSizeCap>
		        </rollingPolicy>
		    </appender>
        </root>
    </springProfile>

</configuration>